<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="entity.Contact" table="CONTACT">

		<meta attribute="class-description">
			This class contains the contact detail.
		</meta>

		<id name="contactID" type="int" column="contact_id">
			<generator class="native" />
		</id>

		<property name="firstName" column="contact_firstName" type="string" />
		<property name="lastName" column="contact_lastName" type="string" />
		<property name="emailAddress" column="contact_emailAddress"
			type="string" />
		<property name="gender" column="contact_gender" type="string" />
		<property name="phoneNumber" column="contact_phoneNumber"
			type="string" />
		<property name="activeStatus" column="contact_activeStatus"
			type="boolean" />

		<many-to-one name="account" column="accountID"
			class="entity.Account" not-null="true" />
			
		<one-to-one name="address" class="entity.Address"
			cascade="all"></one-to-one>
			

	</class>
</hibernate-mapping>