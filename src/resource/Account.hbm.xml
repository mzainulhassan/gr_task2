<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="entity.Account" table="ACCOUNT">
		<meta attribute="class-description">
			This class contains the account detail.
		</meta>

		<id name="id" type="int" column="account_id">
			<generator class="native" />
		</id>

		<property name="name" column="account_name" type="string" />
		<property name="email" column="account_email" type="string" />
		<property name="password" column="account_password" type="string" />
		<property name="timezone" column="account_timezone"
			type="string" />

	</class>
</hibernate-mapping>